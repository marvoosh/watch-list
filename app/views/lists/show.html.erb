
<div class='header'>
  <h1><%= @list.name %></h1>
  <%= link_to '+ Add a movie', new_list_bookmark_path(@list), class: 'button' %>
</div>

<div class='content'>
  <div class='cards'>
    <% @list.bookmarks.each do |bookmark| %>
      <div class='card'>
        <%= image_tag bookmark.movie.poster_url, alt: "Movie's poster", class: 'card-img-top'%>
        <div class="card-body">
          <div class='card-header-flex'>
            <h5 class='card-title'><%= bookmark.movie.title %></h5>
            <%= link_to fa_icon("trash"), bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' }, class: 'button trash'%>
          </div>
          <p class='card-text'><%= bookmark.movie.overview %></p>
          <p class='card-rating'><%= fa_icon('star') %> Rating - <%= bookmark.movie.rating %> <%= fa_icon('star') %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

